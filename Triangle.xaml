<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShapeCalculator.Triangle"
             Title="Triangle">
    <FlexLayout Direction="Row" HorizontalOptions="Center">
        <VerticalStackLayout x:Name="TriangleImages" FlexLayout.Basis="200" FlexLayout.Order="0">
            <Label
                Text="Welcome to .NetMaui"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                BackgroundColor="Black"/>
            <Label
                Text="Test"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
        <VerticalStackLayout FlexLayout.Basis="200" >
            <Label
                Text="Second Test"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </FlexLayout>
</ContentPage>